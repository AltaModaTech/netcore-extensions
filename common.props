<Project>

    <!-- Company, copyright -->
    <PropertyGroup>
        <Copyright>AltaModa Technologies, LLC</Copyright>
        <Company>AltaModa Technologies</Company>
        <Authors>@jburnett</Authors>
    </PropertyGroup>

    <!-- Target frameworks  -->
    <PropertyGroup>
        <TargetFrameworks>net6.0</TargetFrameworks>
    </PropertyGroup>

    <!-- Assembly version & attribute controls -->
    <PropertyGroup>
        <!-- Associate test assemblies with AltaModa Extensions -->
        <Product>AltaModa .NET Extensions</Product>
    
        <VersionPrefix>3.1.0</VersionPrefix>

        <GenerateAssemblyConfigurationAttribute>true</GenerateAssemblyConfigurationAttribute>
        <GenerateAssemblyCompanyAttribute>true</GenerateAssemblyCompanyAttribute>
        <GenerateAssemblyProductAttribute>true</GenerateAssemblyProductAttribute>
    </PropertyGroup>

     <!-- Packages used by all  -->
    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Logging" Version="*" />
    </ItemGroup>

</Project>